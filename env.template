# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/jarvis_db"
# Alternative for SQLite during development:
# DATABASE_URL="file:./dev.db"

# Authentication
NEXTAUTH_SECRET="your-secret-key-here-generate-a-strong-one"
NEXTAUTH_URL="http://localhost:3000"

# JWT Configuration
JWT_SECRET="your-jwt-secret-here"

# External API Keys
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
GOOGLE_API_KEY="your-google-api-key"

# Crypto/Web3 Configuration
ETHEREUM_RPC_URL="https://mainnet.infura.io/v3/your-project-id"
POLYGON_RPC_URL="https://polygon-rpc.com"
HYPEREVM_RPC_URL="https://rpc.hyperevm.com" # HyperEVM RPC endpoint
NEXT_PUBLIC_HYPEREVM_RPC_URL="https://rpc.hyperevm.com" # HyperEVM RPC endpoint (client-side)
NEXT_PUBLIC_HYPEREVM_EXPLORER_URL="https://explorer.hyperevm.com" # HyperEVM block explorer URL
WALLET_CONNECT_PROJECT_ID="your-walletconnect-project-id"

# Optional: Private keys for server-side transactions (use with extreme caution)
# PRIVATE_KEY="your-private-key-for-server-transactions"

# Email Configuration (for auth)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="your-email@gmail.com"

# Social Auth (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Account Abstraction (Privy + Pimlico)
NEXT_PUBLIC_PRIVY_APP_ID="your-privy-app-id"
PRIVY_APP_SECRET="your-privy-app-secret"
NEXT_PUBLIC_PIMLICO_API_KEY="your-pimlico-api-key"
